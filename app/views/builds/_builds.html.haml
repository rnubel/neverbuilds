%ul#builds
  - 10.times do
    %li
      %a{:href => '#', :class => "trickster_rogue", :style => "display: block;"}
        .name
          %strong Biggest crits of all time
        .meta
          by 
          %strong brous
          on #{format_date(Date.today)}
          %div great weapon fighter
          %div pvp
  - @builds.each do |build|
    %li{:class => "#{build.category} #{guide.map if guide.map}", :"data-rating" => "#{guide.rate_average}", :"data-date" => "#{format_date(guide.created_at)}"}
      %a{:href => guide_path(guide), :style => "display: block;"}
        .name
          %strong= truncate(guide.name, 51)
        .meta
          by 
          %strong #{guide.user.username} 
          on #{format_date(guide.created_at)}
          - if guide.guide_type != nil
            %div{:class => guide.guide_type}= guide.guide_type
